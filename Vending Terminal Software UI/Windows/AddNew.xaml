<Window x:Class="Vending_Terminal_Software_UI.AddNew"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vending_Terminal_Software_UI"
        mc:Ignorable="d"
        Title="AddNew" Height="300" Width="300" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Button Content="Add" Margin="5" Grid.Row="3" Height="21" VerticalAlignment="Bottom" Click="Button_Click"/>
        <ComboBox Name="ExistingNames" HorizontalAlignment="Stretch" Margin="5" Grid.Row="0" VerticalAlignment="Top" DisplayMemberPath="Name" SelectionChanged="InfoSelected"/>
        <TextBox Name="Amount" Text="0" HorizontalAlignment="Stretch" Height="23" Margin="5" Grid.Row="2" TextWrapping="Wrap" TextAlignment="Center"/>
        <TextBlock Text="Input amount here:" Margin="5" Grid.Row="1" HorizontalAlignment="Center"/>
    </Grid>

</Window>
